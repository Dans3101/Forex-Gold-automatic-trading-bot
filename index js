// index.js
import express from "express";
import { startBot } from "./botManager.js";

// --- Keep Alive Server (for Render/Heroku) ---
const app = express();
const PORT = process.env.PORT || 3000;

app.get("/", (req, res) => {
  res.send("✅ WhatsApp Trading Signals Bot is running!");
});

app.listen(PORT, () => {
  console.log(`🌍 Keep-alive server running on port ${PORT}`);
});

// --- Auto-restart wrapper ---
async function main() {
  while (true) {
    try {
      console.log("🚀 Starting WhatsApp Trading Signals Bot...");
      await startBot();
    } catch (err) {
      console.error("❌ Bot crashed with error:", err.message);
      console.log("🔄 Restarting bot in 5 seconds...");
      await new Promise((res) => setTimeout(res, 5000));
    }
  }
}

main();